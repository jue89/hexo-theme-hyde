<div class="page">
  <h1>
    <% if (page.link) { %>
      <a href="<%- url_for(page.link) %>" target="_blank" itemprop="url"><%= page.title %></a>
    <% } else if (page.title) { %>
      <a href="<%- url_for(page.path) %>"><%= page.title %></a>
    <% } else { %>
      <a href="<%- url_for(page.path) %>">Untitled</a>
    <% } %>
  </h1>
  <% if (page.date) { %>
    <span class="post-date">
      <%= date(page.date) %>
      <% if (page.tags) { %>
        â€¢ <%- list_tags(page.tags, { show_count: false, style: 'link' }) %>
      <% } %>
    </span>
  <% } %>
  <%- page.content %>
</div>
